.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        group name
      .main-header__left-box__member-list
        Member :
    =link_to "#", class: "main-header__edit-btn" do
      Edit
  .messages
    = render @messages
  
  .form
    = form_for [@group, @message], class:"new_message" do |f|
      .input-box
        = f.text_field :body, class: 'input-box__text', placeholder: 'type a message'
        .input-box__image
          = f.label :image do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'