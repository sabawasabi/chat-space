%html
  %body
    .chat-main
      .main-header
        .main-header__left-box
          .main-header__left-box__current-group
            group name
          .main-header__left-box__member-list
            Member :
        =link_to "#", class: "main-header__edit-btn" do
          Edit
      .messages
        .message
          .message__upper-info
            .message__upper-info__talker
              username
            .message__upper-info__date
              2019/12/01(Sun) 00:00:00
          .message__text
            this is a first message
      .form
        .new_message
          .input-box
            %input{placeholder:"type a message", class: "input-box__text"}
            %label{class: "input-box__image"}
              = icon('fas', 'image')
              %input{type: "file", class: "input-box__image__file"}
          %input{type: "submit", value: "Send", class: "submit-btn"}